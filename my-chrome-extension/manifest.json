{
    "manifest_version": 3,
    "name": "Obsidian Guard",
    "version": "2.0.0",
    "description": "AI-powered phishing detection â€“ every URL is checked automatically with real-time status banners and blocking pages.",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "webNavigation",
        "notifications",
        "alarms",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_title": "Obsidian Guard",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/content.js"],
            "css": ["src/content.css"],
            "run_at": "document_end"
        }
    ],
    "options_page": "src/options/options.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["icons/*", "src/warning.html"],
            "matches": ["<all_urls>"]
        }
    ]
}